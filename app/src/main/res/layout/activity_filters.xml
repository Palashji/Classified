<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/tvcategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/calibri_regular"
        android:text="Categories" />

    <LinearLayout
        android:id="@+id/allcateorielayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcategories"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgeyes"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/tvcategories"
            android:layout_marginLeft="@dimen/_3sdp"
            android:background="@drawable/profilecircular_img"
            android:fontFamily="@font/calibri_regular"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_eye" />

        <TextView
            android:id="@+id/tvallcategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_toRightOf="@+id/tvcategories"
            android:layout_weight="1"
            android:fontFamily="@font/calibri_regular"
            android:text="All Categories"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgarrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrowangle" />
    </LinearLayout>

    <View
        android:id="@+id/viewing"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/allcateorielayout"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/divider" />

    <EditText
        android:id="@+id/etprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewing"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@null"
        android:fontFamily="@font/calibri_regular"
        android:hint="Price: from"
        android:text="Price: from"
        android:textColor="@color/divider"
        android:textSize="@dimen/_15sdp" />

    <EditText
        android:id="@+id/etpriceto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etprice"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@null"
        android:fontFamily="@font/calibri_regular"
        android:hint="Price: to"
        android:text="Price: to"
        android:textColor="@color/divider"
        android:textSize="@dimen/_15sdp" />

    <View
        android:id="@+id/views"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/etpriceto"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/tvsort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/views"

        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/calibri_regular"
        android:text="Sory by" />

    <LinearLayout
        android:id="@+id/defaut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsort"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvdefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvsort"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_weight="1"
            android:fontFamily="@font/calibri_regular"
            android:text="Default"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgico"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:src="@drawable/ic_arrowangle" />

    </LinearLayout>

    <Button
        android:id="@+id/btnapply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/defaut"
        android:layout_margin="@dimen/_40sdp"
        android:background="@drawable/btn_light"
        android:fontFamily="@font/calibri_regular"
        android:text="Apply"

        android:textColor="@color/icons" />
</RelativeLayout>