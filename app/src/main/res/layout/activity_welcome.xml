<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgyok"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/classifiedlogo" />


    <TextView
        android:id="@+id/tvdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgyok"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="Buy and sell quickly, safely and locally." />

    <TextView
        android:id="@+id/tvclassy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvdescription"
        android:gravity="center"
        android:text="It's tine to classified! " />

    <Button
        android:id="@+id/btnfacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvdescription"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/btn_dark"
        android:text="Continue with Facebook"
        android:textAllCaps="false"
        android:textColor="@color/icons" />

    <Button
        android:id="@+id/btngogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnfacebook"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/btn_light"
        android:text="Continue with Google"
        android:textAllCaps="false"
        android:textColor="@color/icons" />

    <TextView
        android:id="@+id/tvemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btngogle"
        android:layout_marginTop="@dimen/_40sdp"
        android:gravity="center"
        android:text="-------- OR USE YOUR EMAIL -------" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvemail"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvsignup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/Red"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tvlogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/Red"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:text=" By signing or logging in,you agree " />

    <TextView
        android:id="@+id/tvtermscondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtext"
        android:gravity="center"
        android:text="Terms and Conditions"
        android:textColor="@color/Red" />
</RelativeLayout>
