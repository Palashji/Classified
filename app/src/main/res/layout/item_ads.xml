<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adsImage"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:background="@drawable/profileimage"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_toRightOf="@+id/adsImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAdTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="item for sell"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvAdVCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cars and Bikes"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvloctaion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location_product"
                android:drawablePadding="@dimen/_4sdp"
                android:text="San jose pinula"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:text="1 hours ago"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1,000 Q"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>