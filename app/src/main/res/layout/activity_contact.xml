<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_bar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvadvertiser"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bggrey"
                android:gravity="center"
                android:text="Contact Advertiser"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgprofile"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/ic_profile"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="Palash"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Joined: 2018 Years ago"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="Phone : 94745833638"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvlogin"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_orange"
                android:drawableLeft="@drawable/ic_chatingicon"
                android:drawablePadding="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Login to Chat"
                android:textColor="@color/icons"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvemail"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_light"
                android:drawableLeft="@drawable/ic_envelope"
                android:drawablePadding="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Reply by email"
                android:textColor="@color/icons"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvshare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="Share this ad"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvshare"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgtwitter"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_weight="1"
                android:background="@drawable/twitter" />

            <ImageView
                android:id="@+id/imgfacebook"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@drawable/facebookicon" />

            <!--<ImageView
                android:id="@+id/imggmail"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@drawable/gmail" />
               -->

            <ImageView
                android:id="@+id/imgpintrest"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@drawable/pintrest" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>