<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fulllayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/adsImage"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:background="@drawable/profileimage"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_toRightOf="@+id/adsImage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAdTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="item for sell"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cars and Bikes"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/tvloctaion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_location_product"
                    android:drawablePadding="@dimen/_4sdp"
                    android:text="San jose pinula"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_time"
                    android:drawablePadding="@dimen/_4sdp"
                    android:gravity="center_vertical"
                    android:text="1 hours ago"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/tvCalender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/_4sdp"
                    android:text="Expiry Date : 24-Oct-15"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="1,000 Q"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fulllayout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_pencil"
                android:text="Edit" />

            <Button
                android:id="@+id/btnHide"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_hideeye"
                android:text="Hide" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_close"
                android:text="Delete" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>